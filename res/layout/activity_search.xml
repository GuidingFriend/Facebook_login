<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trip"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.guidingfriend.SearchActivity" >

    <Button
        android:id="@+id/about_me_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/insta"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="94dp"
        android:text="About Me" />

    <TextView
        android:id="@+id/access_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/about_me_button"
        android:layout_alignRight="@+id/about_me_button"
        android:layout_marginBottom="20dp"
        android:hint="Access Token"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="19dp"
        android:text="Going Somewhere ?"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/fb_blue" />

    <EditText
        android:id="@+id/text_search"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="22dp"
        android:layout_toLeftOf="@+id/search_button"
        android:background="@color/white"
        android:ems="10"
        android:height="50dp"
        android:hint="  Where to ?"
        android:width="300dp" />

    <EditText
        android:id="@+id/text_nearby"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/text_search"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignTop="@+id/nearby_button"
        android:background="@color/white"
        android:ems="10"
        android:hint="Current Location" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_above="@+id/nearby_button"
        android:layout_marginBottom="18dp"
        android:layout_toLeftOf="@+id/search_button"
        android:text="  Roaming Around ?"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <ImageButton
        android:id="@+id/search_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/text_search"
        android:layout_alignLeft="@+id/nearby_button"
        android:src="@drawable/abc_ic_search_api_holo_light" />

    <ImageButton
        android:id="@+id/nearby_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/access_token"
        android:layout_alignParentRight="true"
        android:src="@drawable/com_facebook_place_default_icon" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/access_token"
        android:layout_marginBottom="17dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>