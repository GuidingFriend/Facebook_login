<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trip"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.guidingfriend.SearchActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="19dp"
        android:text="Going Somewhere ?"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/fb_blue" />

    <EditText
        android:id="@+id/text_search"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="22dp"
        android:layout_toLeftOf="@+id/search_button"
        android:background="@color/white"
        android:ems="10"
        android:height="50dp"
        android:hint="  Where to ?"
        android:width="300dp" />

    <ImageButton
        android:id="@+id/search_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="15dp"
        android:src="@drawable/abc_ic_search_api_holo_light" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/search_button"
        android:layout_marginTop="37dp"
        android:text="  Roaming Around ?"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/text_nearby"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:ems="10"
        android:hint="Current Location" >

        <requestFocus />
    </EditText>

    <ImageButton
        android:id="@+id/gpsButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/text_nearby"
        android:layout_toRightOf="@+id/text_search"
        android:src="@drawable/com_facebook_place_default_icon" />

    <Button
        android:id="@+id/about_me_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView1"
        android:text="About Me"
        android:textColor="@color/insta" />

</RelativeLayout>